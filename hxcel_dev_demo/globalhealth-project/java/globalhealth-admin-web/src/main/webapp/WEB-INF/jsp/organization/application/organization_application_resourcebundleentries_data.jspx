<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:spring="http://www.springframework.org/tags"
          xmlns:spring-form="http://www.springframework.org/tags/form"
          xmlns:security="http://www.springframework.org/security/tags"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:x="http://java.sun.com/jsp/jstl/xml"
          xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
          xmlns:tiles="http://tiles.apache.org/tags-tiles"
          xmlns:fn="http://java.sun.com/jsp/jstl/functions"
          xmlns:hxcel="urn:jsptagdir:/WEB-INF/tags/hxcel"
          version="2.0">
    <jsp:directive.page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8"/>

    <div id="${organization.id}_${application.id}_rbentryTable">
        <table width="100%" cellpadding="2" cellspacing="0" border="0" class="list_table">
            <spring:message var="altEdit" code="entity.edit" text="Edit"/>
            <spring:message var="altDelete" code="entity.delete" text="Delete"/>
            <thead>
                <tr>
                    <th align="left" width="10%" class="first_column"><spring:message code="entity.date.created" text="Created"/></th>
                    <th align="left" width="15%"><spring:message code="resourcebundleentry.country" text="Country"/></th>
                    <th align="left" width="23%"><spring:message code="resourcebundleentry.key" text="Key"/></th>
                    <th align="left" width="23%"><spring:message code="resourcebundleentry.value" text="Value"/></th>
                    <th align="left" width="25%"><spring:message code="resourcebundleentry.description" text="Description"/></th>
                    <th width="4%">&#160;</th>
                </tr>
            </thead>
            <tbody>
                <c:choose>
                    <c:when test="${empty entries}">
                        <tr>
                            <td align="center" height="350" colspan="6">
                                <spring:message code="resourcebundleentries.empty" text="No resourcebundle entries for this application are currently in the system"/>
                            </td>
                        </tr>
                    </c:when>
                    <c:otherwise>
                        <c:forEach items="${entries}" var="entry" varStatus="status">
                            <c:choose>
                                <c:when test="${status.count % 2 == 0}">
                                    <c:set var="color" value="rowStyle1" scope="request"/>
                                </c:when>
                                <c:otherwise>
                                    <c:set var="color" value="rowStyle2" scope="request"/>
                                </c:otherwise>
                            </c:choose>
                            <tr class="${color}">
                                <td class="first_column"><fmt:formatDate value="${entry.createdDate}" dateStyle="long"/></td>
                                <td class="row_title">${entry.country.statusCode}</td>
                                <td><hxcel:truncate text="${entry.key}" maxLength="80"/></td>
                                <td><hxcel:truncate text="${entry.value}" maxLength="80"/></td>
                                <td>${entry.description}</td>
                                <td align="right">
                                    <security:authorize ifAllGranted="ROLE_ADMINISTRATOR">
                                        <a href="javascript:bindFormLink({url: '/secure/organization/application/resourcebundle/edit.admin?applicationId=${application.id}&amp;id=${entry.id}&amp;organizationId=${organization.id}', id: '${organization.id}_${application.id}_rbentryTable', cssClass: 'jqmWindow'})" title="${altEdit}">
                                            <img src="/images/icons/edit_pen_16.png" alt="${altEdit}" border="0"/>
                                        </a>
                                    </security:authorize>&#160;
                                    <security:authorize ifAllGranted="ROLE_ADMINISTRATOR">
                                        <a href="javascript:replaceHtmlContent({url: '/secure/organization/application/resourcebundle/delete.admin?view=application.resourcebundle.data&amp;applicationId=${application.id}&amp;id=${entry.id}&amp;organizationId=${organization.id}', id: '${organization.id}_${application.id}_rbentryTable'})" title="${altDelete}"><img
                                                src="/images/icons/delete.png" alt="${altDelete}" border="0"/></a>
                                    </security:authorize>
                                </td>
                            </tr>
                        </c:forEach>
                    </c:otherwise>
                </c:choose>
            </tbody>
        </table>
        <div class="paginator">
            <hxcel:paginator id="${organization.id}_${application.id}_rbentryTable" url="/secure/organization/application/resourcebundle/search.admin" extraParameters="&amp;applicationId=${application.id}&amp;organizationId=${organization.id}&amp;view=organization.application.resourcebundle.data" currentPage="${index}" rowsPerPage="${maxResults}" count="${count}"/>
        </div>
    </div>
</jsp:root>