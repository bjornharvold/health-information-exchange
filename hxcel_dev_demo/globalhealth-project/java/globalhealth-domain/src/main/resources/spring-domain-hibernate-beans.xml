                <value>com.hxcel.globalhealth.domain.common.model.UserInfo</value>
                <value>com.hxcel.globalhealth.domain.common.model.UserRole</value>
                <value>com.hxcel.globalhealth.domain.emr.model.Diagnosis</value>
                <value>com.hxcel.globalhealth.domain.emr.model.Emr</value>
                <value>com.hxcel.globalhealth.domain.emr.model.EmrDiagnosis</value>
                <value>com.hxcel.globalhealth.domain.emr.model.EmrFile</value>
                <value>com.hxcel.globalhealth.domain.emr.model.BasicEmrEntry</value>
                <value>com.hxcel.globalhealth.domain.phr.model.AdvanceDirective</value>
                <value>com.hxcel.globalhealth.domain.phr.model.Allergy</value>
                <value>com.hxcel.globalhealth.domain.phr.model.AlternativeTreatment</value>
                <value>com.hxcel.globalhealth.domain.phr.model.Dental</value>
                <value>com.hxcel.globalhealth.domain.phr.model.Employer</value>
                <value>com.hxcel.globalhealth.domain.phr.model.FamilyHistory</value>
                <value>com.hxcel.globalhealth.domain.phr.model.Hospitalized</value>
                <value>com.hxcel.globalhealth.domain.phr.model.Immunization</value>
                <value>com.hxcel.globalhealth.domain.phr.model.Insurance</value>
                <value>com.hxcel.globalhealth.domain.phr.model.MedicalCondition</value>
                <value>com.hxcel.globalhealth.domain.phr.model.Medication</value>
                <value>com.hxcel.globalhealth.domain.phr.model.PersonalProfile</value>
                <value>com.hxcel.globalhealth.domain.phr.model.PhrContact</value>
                <value>com.hxcel.globalhealth.domain.phr.model.PhrLocation</value>
                <value>com.hxcel.globalhealth.domain.phr.model.Phr</value>
                <value>com.hxcel.globalhealth.domain.phr.model.PhrFile</value>
