                <value>com.hxcel.globalhealth.domain.common.model.Image</value>
                <value>com.hxcel.globalhealth.domain.common.model.InstantMessage</value>
                <value>com.hxcel.globalhealth.domain.common.model.Location</value>
                <value>com.hxcel.globalhealth.domain.common.model.LockedUser</value>
                <value>com.hxcel.globalhealth.domain.common.model.Manager</value>
                <value>com.hxcel.globalhealth.domain.common.model.News</value>
                <value>com.hxcel.globalhealth.domain.common.model.Permission</value>
