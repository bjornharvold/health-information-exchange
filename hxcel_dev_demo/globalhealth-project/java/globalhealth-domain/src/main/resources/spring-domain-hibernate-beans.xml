                <value>com.hxcel.globalhealth.domain.socialnetwork.model.Publication</value>
                <value>com.hxcel.globalhealth.domain.socialnetwork.model.PublicProfile</value>
                <value>com.hxcel.globalhealth.domain.socialnetwork.model.Recommendation</value>
                <value>com.hxcel.globalhealth.domain.socialnetwork.model.Specialty</value>
